<Popup x:Class="SoundBoard.UI.StreamWarningPopup"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:local="clr-namespace:SoundBoard.UI"
       mc:Ignorable="d"
       Height="450" Width="800">

    <StackPanel Background="{StaticResource PrimaryBackgroundBrush}">
        <TextBlock Text="Warning"/>

        <TextBlock Text="Caching video files on your hard drive might be illegal in some countries. Please Check your local law, if you are allowed to cache YouTube videos on your hard drive for streaming the audio into a voice channel"/>

        <TextBlock Text="By accepting this, I agree that I am responsible for all legal consequences resulting from using this feature."/>

        <TextBlock Text="Hint: This feature uses high amounts of bandwidth. Be careful when using timed connections."/>

        <StackPanel Orientation="Horizontal">
            <Button Content="Accept" Click="btn_Accept_Click" />
            <Button Content="Reject" Click="btn_Decline_Click" />
        </StackPanel>
    </StackPanel>
</Popup>