<UserControl x:Class="DicsordBot.ButtonUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DicsordBot"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <ScrollViewer>
            <ItemsControl x:Name="btnControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Margin="5" Width="100" Height="45" Tag="{Binding ID}" Foreground="{Binding ForegroundBrush}" BorderBrush="{Binding BorderBrush}" Background="{Binding BackgoundBrush}" FontFamily="{Binding Font}"  Content="{Binding Name}" Click="btn_Instant_Click" MouseDown="btn_Instant_MouseDown" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>