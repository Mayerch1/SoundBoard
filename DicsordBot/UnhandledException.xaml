<UserControl x:Class="DicsordBot.UnhandledException"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:DicsordBot"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <StackPanel>
            <TextBlock>Description</TextBlock>
            <TextBlock Text="{Binding Ex.Message}" />

            <TextBlock>More info</TextBlock>
            <TextBlock Text="{Binding Info}" />

            <TextBlock>Class</TextBlock>
            <TextBlock Text="{Binding Class}" />

            <TextBlock>File Name</TextBlock>
            <TextBlock Text="{Binding FileName}" />

            <TextBlock>Method</TextBlock>
            <TextBlock Text="{Binding Method}" />

            <TextBlock>Line Number</TextBlock>
            <TextBlock Text="{Binding LineNumber}" />
        </StackPanel>
    </Grid>
</UserControl>