<Window x:Class="DicsordBot.UI.ButtonHotkeyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DicsordBot.UI"
        mc:Ignorable="d"
        Title="ButtonHotkeyWindow" Height="250" Width="450" ResizeMode="NoResize" WindowStyle="None">

    <Border BorderThickness="1" BorderBrush="#C4C4C4">
        <Grid Background="#FCFCFC">
            <Grid.RowDefinitions>
                <RowDefinition Height="6*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="box_Hotkey" Text="" Width="125" KeyDown="box_Hotkey_KeyDown" />
                    <StackPanel Orientation="Vertical">

                        <CheckBox x:Name="box_shift" Content="Shift" />
                        <CheckBox x:Name="box_ctrl" Content="Ctrl" />
                        <CheckBox x:Name="box_win" Content="Win" />
                        <CheckBox x:Name="box_alt" Content="Alt" />
                    </StackPanel>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="1">
                <Button Content="Accept" Click="btn_Accept_Click" IsDefault="True" Background="{StaticResource PrimaryAccentBrush}" />
            </Grid>
        </Grid>
    </Border>
</Window>